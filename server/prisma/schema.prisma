generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model products {
  id            Int            @id @default(autoincrement())
  name          String         @unique @db.VarChar(255)
  category_id   Int            @unique @default(0)
  default_price Decimal
  quantity      Int
  categories    categories?    @relation(fields: [category_id], references: [id])
  transactions  transactions[]
}

model categories {
  id   Int    @unique
  name String @unique @db.VarChar(255)

  products products?
}

model transactions {
  id              Int         @id @unique
  org_id          Int
  user_id         Int
  value           Decimal
  product_id      Int
  quantity_change Int
  date_created    DateTime    @default(now())
  product         products    @relation(fields: [product_id], references: [id])
  orgAccount      orgAccount  @relation(fields: [org_id], references: [id])
  userAccount     userAccount @relation(fields: [user_id], references: [id])
}

model orgAccount {
  id              Int     @unique
  name            String
  current_balance Decimal

  transactions transactions[]
  userAccount  userAccount[]
}

model userAccount {
  id           Int            @id @default(autoincrement())
  email        String
  name         String
  password     String
  org_id       Int
  orgAccount   orgAccount     @relation(fields: [org_id], references: [id])
  transactions transactions[]
}
